<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Praktika.EdirLessonPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Изменить занятие" FontSize="Large" HorizontalOptions="Center" />
            <Entry x:Name="SubjectEntry" Placeholder="Предмет" />
            <DatePicker x:Name="DateEntry" />
            <Entry x:Name="TeacherFioEntry" Placeholder="ФИО Учителя" />
            <Slider x:Name="ProgressSlider" Minimum="0" Maximum="100" BackgroundColor="Black" />
            <Button Text="Сохранить" Clicked="OnSaveClicked" HorizontalOptions="Center" Margin="0,10,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
